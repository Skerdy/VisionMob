<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/register_bckground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prezzo"
            android:textSize="12sp"
            android:textStyle="italic"/>

        <!--Rreshti i pare-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iva_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20%"/>

            <LinearLayout
                android:id="@+id/select_iva"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_txt_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_icon_find_article">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:text="Select IVA" />
            </LinearLayout>
        </LinearLayout>

        <!--R-->


        <!--Rreshti i dyte-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/codice_iva"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00067"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/prezzo_unitario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Prezzo Unitario"
                android:inputType="number"
                android:textSize="14sp"/>
        </LinearLayout>

        <!--Rreshti i trete-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/imponibile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Imponibile"
                android:inputType="number"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/sconto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Sconto"
                android:inputType="number"
                android:textSize="14sp"/>

        </LinearLayout>

        <!--Rreshti i katert-->




    </LinearLayout>


</RelativeLayout>